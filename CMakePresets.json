{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-debug",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "CPPHL_BUILD_TESTS": "ON",
        "CPPHL_ENABLE_WARNINGS": "ON",
        "CPPHL_ENABLE_SANITIZERS": "OFF",
        "CPPHL_ENABLE_COVERAGE": "OFF",
        "CPPHL_ENABLE_CLANG_TIDY": "OFF",
        "CPPHL_ENABLE_CPPCHECK": "OFF"
      }
    },
    {
      "name": "clang-debug-asan-ubsan",
      "displayName": "Clang Debug + ASan/UBSan",
      "inherits": "clang-debug",
      "cacheVariables": {
        "CPPHL_ENABLE_SANITIZERS": "ON"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Clang Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang-release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Release",
        "CPPHL_BUILD_TESTS": "ON",
        "CPPHL_ENABLE_WARNINGS": "ON",
        "CPPHL_ENABLE_SANITIZERS": "OFF",
        "CPPHL_ENABLE_COVERAGE": "OFF",
        "CPPHL_ENABLE_CLANG_TIDY": "OFF",
        "CPPHL_ENABLE_CPPCHECK": "OFF"
      }
    },
    {
      "name": "gcc-coverage",
      "displayName": "GCC Debug Coverage",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/gcc-coverage",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Debug",
        "CPPHL_BUILD_TESTS": "ON",
        "CPPHL_ENABLE_WARNINGS": "ON",
        "CPPHL_ENABLE_SANITIZERS": "OFF",
        "CPPHL_ENABLE_COVERAGE": "ON",
        "CPPHL_ENABLE_CLANG_TIDY": "OFF",
        "CPPHL_ENABLE_CPPCHECK": "OFF"
      }
    },
    {
      "name": "clang-static-analysis",
      "displayName": "Clang Debug + Static Analysis",
      "inherits": "clang-debug",
      "binaryDir": "${sourceDir}/build/clang-static-analysis",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CPPHL_ENABLE_CLANG_TIDY": "ON",
        "CPPHL_ENABLE_CPPCHECK": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-clang-debug",
      "configurePreset": "clang-debug"
    },
    {
      "name": "build-clang-debug-asan-ubsan",
      "configurePreset": "clang-debug-asan-ubsan"
    },
    {
      "name": "build-clang-release",
      "configurePreset": "clang-release"
    },
    {
      "name": "build-gcc-coverage",
      "configurePreset": "gcc-coverage"
    },
    {
      "name": "build-clang-static-analysis",
      "configurePreset": "clang-static-analysis"
    }
  ],
  "testPresets": [
    {
      "name": "test-clang-debug",
      "configurePreset": "clang-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-clang-debug-asan-ubsan",
      "configurePreset": "clang-debug-asan-ubsan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-clang-release",
      "configurePreset": "clang-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-gcc-coverage",
      "configurePreset": "gcc-coverage",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
